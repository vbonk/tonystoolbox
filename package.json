{
  "name": "tonystoolbox",
  "version": "1.7.0",
  "description": "Professional AI tool showcase platform with analytics and subscription management",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "fix-all": "npm run lint:fix && npm run format",
    "db:push": "supabase db push",
    "db:generate": "supabase gen types typescript --project-id $(grep SUPABASE_PROJECT_ID .env.local | cut -d '=' -f2) --schema public > src/types/database.types.ts"
  },
  "dependencies": {
    "next": "^14.2.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "lucide-react": "^0.525.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "framer-motion": "^11.15.0",
    "@supabase/supabase-js": "^2.49.0",
    "@supabase/ssr": "^0.5.2",
    "posthog-js": "^1.205.0",
    "react-markdown": "^9.1.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "@radix-ui/react-slot": "^1.1.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/forms": "^0.5.9",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-import": "^2.30.0",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "AI tools",
    "GPT showcase",
    "analytics platform",
    "Next.js",
    "Supabase",
    "TailwindCSS"
  ],
  "author": "Tony's Toolbox",
  "license": "UNLICENSED"
}
